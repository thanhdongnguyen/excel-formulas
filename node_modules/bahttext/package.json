{
  "name": "bahttext",
  "version": "2.1.0",
  "description": "Change number to Thai pronunciation string",
  "main": "src/index.js",
  "typings": "src/index.js",
  "scripts": {
    "jest": "jest",
    "jest.watch": "jest --watch",
    "commit": "git-cz",
    "coverage.check": "jest --coverage",
    "semantic-release": "semantic-release",
    "standard": "standard",
    "validate": "npm run standard && npm run coverage.check"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jojoee/bahttext.git"
  },
  "keywords": [
    "thai",
    "baht",
    "text",
    "number",
    "convert",
    "thai baht"
  ],
  "author": "Nathachai Thongniran <inid3a@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jojoee/bahttext/issues"
  },
  "homepage": "https://github.com/jojoee/bahttext#readme",
  "dependencies": {},
  "devDependencies": {
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "ghooks": "2.0.4",
    "jest": "^26.6.1",
    "jest-expect-message": "^1.0.2",
    "semantic-release": "^17.2.1",
    "standard": "^15.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ],
    "verbose": true,
    "testMatch": [
      "**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "standard": {
    "verbose": true,
    "env": "jest"
  }
}
